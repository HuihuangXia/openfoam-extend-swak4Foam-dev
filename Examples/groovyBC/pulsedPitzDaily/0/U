FoamFile
{
    version     2.0;
    format      ascii;
    class       volVectorField;
    object      U;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 1 -1 0 0 0 0];

internalField   uniform (0 0 0);

boundaryField
{
    inlet
    {
        //        type            groovyBC;
        type            groovyBCFixedValue;

        //        debugCommonDriver 0;

        //        variableNameIdenticalToField true;

      minMaxPoint (
          "minY=min(yp);"
          "maxY=max(yp);"
      );

      variables (
          "yp=pts().y;"
          "#minMaxPoint;"
          "para=-(maxY-pos().y)*(pos().y-minY)/(0.25*pow(maxY-minY,2))*normal();"
      );

      amplitude 10;

      valueExpression "$amplitude*(1+0.5*sin(500*time()))*para";

      value           uniform (10 0 0);
    }

    outlet
    {
      type            groovyBC;
      valueExpression "vector(0,0,0)";
      gradientExpression "vector(0,0,0)";
      fractionExpression "(phi > 0) ? 0 : 1";

//         type            inletOutlet;
//         inletValue      uniform (0 0 0);
      value           uniform (0 0 0);
    }

    upperWall
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    lowerWall
    {
        type            fixedValue;
        value           uniform (0 0 0);
    }

    frontAndBack
    {
        type            empty;
    }
}

// ************************************************************************* //
