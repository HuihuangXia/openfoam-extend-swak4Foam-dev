FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      alpha.water;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 0;

boundaryField
{
    inlet {
        type groovyBC;
        variables (
            "minX=min(pts().x);"
            "maxX=max(pts().x);"
            "middleX=(minX+maxX)/2;"
        );
        value uniform 0;
        valueExpression "middleX>pos().x ? 1 : 0";
    }
    left {
        type inletOutlet;
        value $internalField;
        inletValue $internalField;
    }
    right {
        $left;
    }
    defaultFaces
    {
        type            zeroGradient;
    }
    "ACMI_.*_blockage"
    {
        $defaultFaces;
    }
    "ACMI_.*_couple"
    {
        type  cyclicACMI;
        value uniform 0;
    }

}

