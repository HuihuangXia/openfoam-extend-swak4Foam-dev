FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

energySourceBefore {
    type matrixChangeBefore;
    active true;
    selectionMode all;
    matrixChangeBeforeCoeffs {
        fieldName h;
        namePrefix fvChange;
    }
}
momentumSourceBefore {
    type matrixChangeBefore;
    active true;
    selectionMode all;
    matrixChangeBeforeCoeffs {
        fieldName U;
        namePrefix fvChange;
    }
}
energyResidual {
    type matrixChangeBefore;
    active true;
    selectionMode all;
    matrixChangeBeforeCoeffs {
        fieldName h;
        namePrefix before;
    }
}
momentumResidual {
    type matrixChangeBefore;
    active true;
    selectionMode all;
    matrixChangeBeforeCoeffs {
        fieldName U;
        namePrefix before;
    }
}
showFvOptions {
    type reportAvailableFvOptions;
    active true;
    selectionMode all;
    reportAvailableFvOptionsCoeffs {}
}
airToporous
{
    type            constantHeatTransfer;
    active          yes;

    constantHeatTransferCoeffs
    {
        interpolationMethod cellVolumeWeight;
        nbrRegion       porous;
        master          false;

        nbrModel        porousToair;
        fields          (h);
        semiImplicit    no;
    }
}

porosityBlockage
{
    type            interRegionExplicitPorositySource;
    active          yes;

    interRegionExplicitPorositySourceCoeffs
    {
        interpolationMethod cellVolumeWeight;
        nbrRegion       porous;

        type            DarcyForchheimer;

        DarcyForchheimerCoeffs
        {
            d   (-1000 -1000 1e4);
            f   (0 0 0);

            coordinateSystem
            {
                type    cartesian;
                origin  (0 0 0);
                coordinateRotation
                {
                    type    axesRotation;
                    e1      (0 1 0);
                    e2      (0 0 1);
                }
            }
        }
    }
}
energySourceAfter {
    type matrixChangeAfter;
    active true;
    selectionMode all;
    matrixChangeAfterCoeffs {
        fieldName h;
        namePrefix fvChange;
    }
}
momentumSourceAfter {
    type matrixChangeAfter;
    active true;
    selectionMode all;
    matrixChangeAfterCoeffs {
        fieldName U;
        namePrefix fvChange;
    }
}


