FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

energySourceBefore {
    type matrixChangeBefore;
    active true;
    selectionMode all;
    matrixChangeBeforeCoeffs {
        fieldName h;
        namePrefix fvChange;
    }
}
energyResidual {
    type matrixChangeBefore;
    active true;
    selectionMode all;
    matrixChangeBeforeCoeffs {
        fieldName h;
        namePrefix before;
    }
}
showFvOptions {
    type reportAvailableFvOptions;
    active true;
    selectionMode all;
    reportAvailableFvOptionsCoeffs {}
}
porousToair
{
    type            constantHeatTransfer;
    active          yes;

    constantHeatTransferCoeffs
    {
        interpolationMethod cellVolumeWeight;
        nbrRegion       air;
        master          true;

        nbrModel        airToporous;
        fields          (h);
        semiImplicit    no;
    }
}
energySourceAfter {
    type matrixChangeAfter;
    active true;
    selectionMode all;
    matrixChangeAfterCoeffs {
        fieldName h;
        namePrefix fvChange;
    }
}


