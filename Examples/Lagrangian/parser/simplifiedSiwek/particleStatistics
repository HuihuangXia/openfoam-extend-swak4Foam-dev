FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

// just for testing a problem with surfaceFields that become variables

positions {
    valueType cloud;
    cloudName limestoneCloud1;
    expression "pos()";
    //    expression "phiSq";
    accumulations (
        min
        max
        average
        median
    );
}

temperature {
    $positions;
    expression "T";
}

turbulenceDifference {
    $positions;
    expression "mag(U-UTurb)";
}

