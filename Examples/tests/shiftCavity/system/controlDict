FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     icoFoam;

startFrom       startTime;

startTime       0;

stopAt          endTime;

endTime         0.5;

deltaT          0.05;

// writeControl    timeStep;
writeControl    adjustableRunTime;

// writeInterval   20;
writeInterval   0.05;

purgeWrite      0;

writeFormat     ascii;

writePrecision  6;

writeCompression compressed;

timeFormat      general;

timePrecision   6;

runTimeModifiable yes;

libs (
    "libswakFunctionObjects.so"
    "libsimpleSwakFunctionObjects.so"
    "libswakShiftFieldFunctionPlugin.so"
);

functions {
    constantShifted {
        type expressionField;
        autowrite true;
        fieldName shiftedCircle;
        variables (
            "minX=min(pts().x);"
            "maxX=max(pts().x);"
            "minY=min(pts().y);"
            "maxY=max(pts().y);"
            "minZ=min(pts().z);"
            "maxZ=max(pts().z);"
            "radius=0.5*interpolateToCell(maxX-minX);"
            "center=0.5*interpolateToCell(vector(maxX+minX,maxY+minY,maxZ+minZ));"
            "vals=mag(pos()-center)<radius ? 1 : -1;"
        );
        //        expression "shiftConstantScalarField(vals,(-0.025,0,0))";
        expression "shiftConstantScalarField(pos().y<pos().x? 1 : -1,(-0.025 0 0))";
    }
    timeShifted {
        $constantShifted;
        fieldName shiftedCircleTime;
        expression "shiftExpressionScalarField(pos().y<pos().x? 1 : -1,interpolateToPoint(0.2*(time()-0.25)*vector(-1,0,0)))";
    }
    shiftedCircleDefault {
        $constantShifted;
        fieldName shiftedCircleDefault;
        expression "shiftConstantScalarFieldDefault(pos().y<pos().x? 1 : -1,(-0.025 0 0),2)";
    }
    timeShiftedDefault {
        $constantShifted;
        fieldName shiftedCircleTimeDefault;
        expression "shiftExpressionVectorFieldDefault(vector(1,1,1)*(pos().y<pos().x? 1 : -1),interpolateToPoint(0.2*(time()-0.25)*vector(-1,0,0)),(1 2 3))";
    }
}

// ************************************************************************* //
